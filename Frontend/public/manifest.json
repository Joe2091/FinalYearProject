{
  "manifest_version": 3,
  "name": "Chrome notes extension",
  "version": "1.0",
  "description": "A Chrome extension for taking notes using Vue.js",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ]
}
